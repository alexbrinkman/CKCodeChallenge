<h1>Welcome Movie Enthusiast</h1>

<%= form_tag('/past', method: 'get') do %>
    <fieldset>
      <label>Fetch Last Weekend's Movie Box Office Results.</label>
      <label>Show <%= select_tag 'show', options_for_select([ '5', '10', '15', '20', '25' ], '10') %> movies.</label>
      <%= submit_tag('Search', name: nil) %>
  </fieldset>
<% end %>

<%= form_tag('/future', method: 'get') do %>
    <fieldset>
      <label>Project Box Office Rankings for the next 4 weeks.</label>
      <%= submit_tag('Project', name: nil) %>
    </fieldset>
<% end %>